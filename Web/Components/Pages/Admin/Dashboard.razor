                </div>
            </div>

            <div class="col-lg-4 col-md-6">
                <div class="card border-0 shadow-sm h-100 action-card" @onclick='() => _navigationManager.NavigateTo("/admin/reservas")'>
                    <div class="card-body text-center p-4">
                        <div class="action-icon-large bg-info mb-3">
                            <i class="bi bi-calendar-check-fill"></i>
                        </div>
                        <h5 class="card-title mb-2">Gestionar Reservas</h5>
                        <p class="card-text text-muted small">Visualizar y cancelar reservas de estacionamiento</p>
                        <button class="btn btn-info btn-sm mt-3">
                            Ir a Reservas <i class="bi bi-arrow-right ms-2"></i>
                        </button>
                    </div>
                </div>
            </div>
        </div>

        <!-- Actividad Reciente -->
        <div class="row">
            <div class="col-12">
                <div class="card border-0 shadow-sm">
                    <div class="card-header bg-white border-bottom">
                        <h5 class="mb-0">
                            <i class="bi bi-clock-history me-2 text-primary"></i>Actividad Reciente
                        </h5>
                    </div>
                    <div class="card-body">
                        <div class="list-group list-group-flush">
                            @if (actividadReciente.Any())
                            {
                                @foreach (var actividad in actividadReciente.Take(5))
                                {
                                    <div class="list-group-item border-0">
                                        <div class="d-flex align-items-center">
                                            <div class="activity-icon @actividad.ColorClass me-3">
                                                <i class="bi @actividad.Icono"></i>
                                            </div>
                                            <div class="flex-grow-1">
                                                <h6 class="mb-1">@actividad.Titulo</h6>
                                                <small class="text-muted">@actividad.Descripcion</small>
                                            </div>
                                            <small class="text-muted">@actividad.Fecha.ToString("HH:mm")</small>
                                        </div>
                                    </div>
                                }
                            }
                            else
                            {
                                <div class="text-center py-4">
                                    <i class="bi bi-inbox display-4 text-muted"></i>
                                    <p class="text-muted mt-3">No hay actividad reciente</p>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

@code {
    private bool isAuthenticated = false;
    private bool isLoading = true;
    private Usuario? usuarioAdmin;

    // KPIs
    private int totalUsuarios = 0;
    private int usuariosActivos = 0;
    private int totalLugares = 0;
    private int lugaresDisponibles = 0;
    private int reservasActivas = 0;
    private int reservasHoy = 0;

    // Actividad reciente
    private List<ActividadReciente> actividadReciente = new();

    protected override async Task OnInitializedAsync()
    {
        try
        {
            isAuthenticated = await VerificarAutenticacionAdmin();

            if (isAuthenticated)
            {
                await CargarDatosUsuarioAdmin();
                await CargarKPIs();
                await CargarActividadReciente();
            }

            isLoading = false;
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error al cargar dashboard admin: {ex.Message}");
            isAuthenticated = false;
            isLoading = false;
        }
    }

    private async Task<bool> VerificarAutenticacionAdmin()
    {
        var isAuth = await _firebaseAuthService.IsUserAuthenticated();
        if (!isAuth) return false;

        var firebaseUser = _firebaseAuthService.CurrentUser;
        if (firebaseUser == null) return false;

        var usuarios = await _usuarioService.GetAllAsync();
        usuarioAdmin = usuarios?.FirstOrDefault(u => u.Email == firebaseUser.Email);

        // Verificar que sea Admin
        return usuarioAdmin?.TipoUsuario == Service.Enums.TipoUsuarioEnum.Admin;
    }

    private async Task CargarDatosUsuarioAdmin()
    {
        // Ya cargado en VerificarAutenticacionAdmin
        await Task.CompletedTask;
    }

    private async Task CargarKPIs()
    {
        try
        {
            // Total usuarios
            var usuarios = await _usuarioService.GetAllAsync();
            totalUsuarios = usuarios?.Count ?? 0;
            usuariosActivos = usuarios?.Count(u => u.TipoUsuario != Service.Enums.TipoUsuarioEnum.Admin) ?? 0;

            // Total lugares
            var lugares = await _lugarService.GetAllAsync();
            totalLugares = lugares?.Count ?? 0;

            // Reservas
            var reservas = await _reservaService.GetAllAsync();
            reservasActivas = reservas?.Count(r => r.EstadoReserva == Service.Enums.EstadoReservaEnum.Activa) ?? 0;
            reservasHoy = reservas?.Count(r => r.FechaInicio.Date == DateTime.Today) ?? 0;

            // ✅ Calcular lugares disponibles: lugares sin reservas activas actualmente
            var lugaresOcupadosIds = reservas?
                .Where(r => r.EstadoReserva == Service.Enums.EstadoReservaEnum.Activa 
                    && r.FechaInicio <= DateTime.Now 
                    && r.FechaFin >= DateTime.Now)
                .Select(r => r.LugarId)
                .Distinct()
                .ToList() ?? new List<int>();

            lugaresDisponibles = totalLugares - lugaresOcupadosIds.Count;
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error al cargar KPIs: {ex.Message}");
        }
    }

    private async Task CargarActividadReciente()
    {
        try
        {
            var reservas = await _reservaService.GetAllAsync();
            actividadReciente = reservas?
                .OrderByDescending(r => r.FechaInicio)
                .Take(5)
                .Select(r => new ActividadReciente
                {
                    Titulo = $"Nueva reserva - Plaza {r.Lugar?.Numero}",
                    Descripcion = $"Usuario: {r.Usuario?.Nombre}",
                    Fecha = r.FechaInicio,
                    Icono = "bi-calendar-check",
                    ColorClass = "bg-success"
                })
                .ToList() ?? new();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error al cargar actividad: {ex.Message}");
        }
    }

    private class ActividadReciente
    {
        public string Titulo { get; set; } = "";
        public string Descripcion { get; set; } = "";
        public DateTime Fecha { get; set; }
        public string Icono { get; set; } = "";
        public string ColorClass { get; set; } = "";
    }
}

