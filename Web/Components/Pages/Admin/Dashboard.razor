@page "/admin"
@page "/admin/dashboard"
@inject IUsuarioService _usuarioService
@inject IReservaService _reservaService
@inject ILugarService _lugarService
@inject FirebaseAuthService _firebaseAuthService
@inject NavigationManager _navigationManager
@rendermode InteractiveServer

<PageTitle>Dashboard Admin - ParkAR</PageTitle>

@if (!isAuthenticated && !isLoading)
{
    <div class="container-fluid py-5">
        <div class="row justify-content-center">
            <div class="col-md-6 text-center">
                <i class="bi bi-shield-lock display-1 text-muted"></i>
                <h3 class="mt-3">Acceso Restringido</h3>
                <p class="text-muted">Solo administradores pueden acceder a esta sección.</p>
                <button class="btn btn-primary" @onclick='() => _navigationManager.NavigateTo("/login")'>
                    <i class="bi bi-box-arrow-in-right me-2"></i>Iniciar Sesión
                </button>
            </div>
        </div>
    </div>
}
else if (isLoading)
{
    <div class="container-fluid py-5">
        <div class="row justify-content-center">
            <div class="col-md-6 text-center">
                <div class="spinner-border text-primary" role="status">
                    <span class="visually-hidden">Cargando...</span>
                </div>
                <h5 class="mt-3">Cargando dashboard...</h5>
            </div>
        </div>
    </div>
}
else
{
    <div class="container-fluid py-4">
        <!-- Header Admin -->
        <div class="row mb-4">
            <div class="col-12">
                <div class="bg-gradient-admin text-white rounded-4 p-4 position-relative overflow-hidden">
                    <div class="position-relative" style="z-index: 1;">
                        <h1 class="h3 mb-2">
                            <i class="bi bi-shield-check me-2"></i>Panel de Administración
                        </h1>
                        <p class="mb-0 opacity-75">Gestión completa del sistema ParkAR</p>
                    </div>
                    <div class="position-absolute top-0 end-0 p-4" style="opacity: 0.1; font-size: 8rem;">
                        <i class="bi bi-gear-fill"></i>
                    </div>
                </div>
            </div>
        </div>

        <!-- KPIs en Grilla -->
        <div class="row g-4 mb-4">
            <div class="col-lg-4 col-md-6">
                <div class="card border-0 shadow-sm h-100 hover-lift">
                    <div class="card-body">
                        <div class="d-flex align-items-center">
                            <div class="flex-shrink-0">
                                <div class="kpi-icon bg-primary">
                                    <i class="bi bi-people-fill"></i>
                                </div>
                            </div>
                            <div class="flex-grow-1 ms-3">
                                <h6 class="text-muted mb-1 text-uppercase small">Total Usuarios</h6>
                                <h2 class="mb-0 fw-bold">@totalUsuarios</h2>
                            </div>
                        </div>
                        <div class="mt-3 pt-3 border-top">
                            <small class="text-success">
                                <i class="bi bi-arrow-up"></i> @usuariosActivos activos
                            </small>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-4 col-md-6">
                <div class="card border-0 shadow-sm h-100 hover-lift">
                    <div class="card-body">
                        <div class="d-flex align-items-center">
                            <div class="flex-shrink-0">
                                <div class="kpi-icon bg-success">
                                    <i class="bi bi-p-square-fill"></i>
                                </div>
                            </div>
                            <div class="flex-grow-1 ms-3">
                                <h6 class="text-muted mb-1 text-uppercase small">Lugares Totales</h6>
                                <h2 class="mb-0 fw-bold">@totalLugares</h2>
                            </div>
                        </div>
                        <div class="mt-3 pt-3 border-top">
                            <small class="text-success">
                                <i class="bi bi-check-circle"></i> @lugaresDisponibles disponibles
                            </small>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-lg-4 col-md-6">
                <div class="card border-0 shadow-sm h-100 hover-lift">
                    <div class="card-body">
                        <div class="d-flex align-items-center">
                            <div class="flex-shrink-0">
                                <div class="kpi-icon bg-warning">
                                    <i class="bi bi-calendar-check-fill"></i>
                                </div>
                            </div>
                            <div class="flex-grow-1 ms-3">
                                <h6 class="text-muted mb-1 text-uppercase small">Reservas Activas</h6>
                                <h2 class="mb-0 fw-bold">@reservasActivas</h2>
                            </div>
                        </div>
                        <div class="mt-3 pt-3 border-top">
                            <small class="text-info">
                                <i class="bi bi-clock"></i> @reservasHoy hoy
                            </small>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Acciones Rápidas en Grilla -->
        <div class="row mb-4">
            <div class="col-12">
                <h5 class="mb-3">
                    <i class="bi bi-lightning-fill text-warning me-2"></i>Acciones Rápidas
                </h5>
            </div>
        </div>

        <div class="row g-4 mb-4">
            <div class="col-lg-4 col-md-6">
                <div class="card border-0 shadow-sm h-100 action-card" @onclick='() => _navigationManager.NavigateTo("/admin/usuarios")'>
                    <div class="card-body text-center p-4">
                        <div class="action-icon-large bg-primary mb-3">
                            <i class="bi bi-people-fill"></i>
                        </div>
                        <h5 class="card-title mb-2">Gestionar Usuarios</h5>
                        <p class="card-text text-muted small">Consultar, bloquear o habilitar cuentas de usuarios</p>
