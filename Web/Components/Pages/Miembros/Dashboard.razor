@page "/miembros"
@page "/miembros/dashboard"
@inject IUsuarioService _usuarioService
@inject IVehiculoService _vehiculoService
@inject IReservaService _reservaService
@inject FirebaseAuthService _firebaseAuthService
@inject NavigationManager _navigationManager
@rendermode InteractiveServer

<PageTitle>Dashboard - ParkAR</PageTitle>

@if (!isAuthenticated && !isLoading)
{
    <div class="container-fluid py-5">
        <div class="row justify-content-center">
            <div class="col-md-6 text-center">
                <i class="bi bi-shield-lock display-1 text-muted"></i>
                <h3 class="mt-3">Acceso Restringido</h3>
                <p class="text-muted">Debes iniciar sesión para acceder al dashboard.</p>
                <button class="btn btn-primary" @onclick='() => _navigationManager.NavigateTo("/login")'>
                    <i class="bi bi-box-arrow-in-right me-2"></i>Iniciar Sesión
                </button>
            </div>
        </div>
    </div>
}
else if (isLoading)
{
    <div class="container-fluid py-5">
        <div class="row justify-content-center">
            <div class="col-md-6 text-center">
                <div class="spinner-border text-primary" role="status">
                    <span class="visually-hidden">Cargando...</span>
                </div>
                <h5 class="mt-3">Cargando dashboard...</h5>
            </div>
        </div>
    </div>
}
else
{
    <div class="container-fluid py-4">
        <!-- Header de bienvenida -->
        <div class="row mb-4">
            <div class="col-12">
                <div class="bg-gradient-primary text-white rounded-4 p-4 position-relative overflow-hidden">
                    <div class="position-relative z-1">
                        <h1 class="h3 mb-2">¡Bienvenido, @(usuario?.Nombre ?? "Usuario")!</h1>
                        <p class="mb-3 opacity-75">Gestiona tus reservas, vehículos y suscripciones desde aquí.</p>
                        <div class="d-flex gap-2 flex-wrap">
                            <button class="btn btn-light btn-sm" @onclick='() => _navigationManager.NavigateTo("/miembros/reservas/crear")'>
                                <i class="bi bi-plus-circle me-2"></i>Nueva Reserva
                            </button>
                            <button class="btn btn-outline-light btn-sm" @onclick='() => _navigationManager.NavigateTo("/miembros/perfil")'>
                                <i class="bi bi-person me-2"></i>Ver Perfil
                            </button>
                        </div>
                    </div>
                    <!-- Decoración de fondo -->
                    <div class="position-absolute top-0 end-0 p-4" style="opacity: 0.1; font-size: 8rem;">
                        <i class="bi bi-p-square-fill"></i>
                    </div>
                </div>
            </div>
        </div>

        <!-- Tarjetas de estadísticas - ✅ CÍRCULOS PERFECTOS -->
        <div class="row mb-4">
            <div class="col-md-3 mb-3">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-body text-center">
                        <div class="d-flex align-items-center justify-content-center mb-3">
                            <div class="stat-circle bg-primary">
                                <i class="bi bi-car-front fs-4 text-white"></i>
                            </div>
                        </div>
                        <h4 class="fw-bold mb-1">@totalVehiculos</h4>
                        <p class="text-muted mb-0">Vehículos Registrados</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3 mb-3">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-body text-center">
                        <div class="d-flex align-items-center justify-content-center mb-3">
                            <div class="stat-circle bg-success">
                                <i class="bi bi-calendar-check fs-4 text-white"></i>
                            </div>
                        </div>
                        <h4 class="fw-bold mb-1">@reservasActivas</h4>
                        <p class="text-muted mb-0">Reservas Activas</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3 mb-3">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-body text-center">
                        <div class="d-flex align-items-center justify-content-center mb-3">
                            <div class="stat-circle bg-info">
                                <i class="bi bi-graph-up fs-4 text-white"></i>
                            </div>
                        </div>
                        <h4 class="fw-bold mb-1">@totalReservas</h4>
                        <p class="text-muted mb-0">Total Reservas</p>
                    </div>
                </div>
            </div>
            <div class="col-md-3 mb-3">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-body text-center">
                        <div class="d-flex align-items-center justify-content-center mb-3">
                            <div class="stat-circle bg-warning">
                                <i class="bi bi-credit-card fs-4 text-white"></i>
                            </div>
                        </div>
                        <h4 class="fw-bold mb-1">@suscripcionesActivas</h4>
                        <p class="text-muted mb-0">Suscripciones</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Contenido principal -->
        <div class="row">
            <!-- Acciones rápidas -->
            <div class="col-lg-4 mb-4">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-header bg-white border-bottom">
                        <h5 class="card-title mb-0">
                            <i class="bi bi-lightning-fill me-2 text-warning"></i>Acciones Rápidas
                        </h5>
                    </div>
                    <div class="card-body p-0">
                        <div class="list-group list-group-flush">
                            <button class="list-group-item list-group-item-action d-flex align-items-center py-3" 
                                    @onclick='() => _navigationManager.NavigateTo("/miembros/reservas/crear")'>
                                <div class="action-circle bg-success me-3">
                                    <i class="bi bi-plus text-white"></i>
                                </div>
                                <div>
                                    <h6 class="mb-1">Nueva Reserva</h6>
                                    <small class="text-muted">Reservar un lugar de estacionamiento</small>
                                </div>
                                <i class="bi bi-chevron-right ms-auto text-muted"></i>
                            </button>
                            <button class="list-group-item list-group-item-action d-flex align-items-center py-3"
                                    @onclick='() => _navigationManager.NavigateTo("/miembros/perfil")'>
                                <div class="action-circle bg-primary me-3">
                                    <i class="bi bi-person text-white"></i>
                                </div>
                                <div>
                                    <h6 class="mb-1">Gestionar Vehículos</h6>
                                    <small class="text-muted">Agregar o editar vehículos</small>
                                </div>
                                <i class="bi bi-chevron-right ms-auto text-muted"></i>
                            </button>
                            <button class="list-group-item list-group-item-action d-flex align-items-center py-3"
                                    @onclick='() => _navigationManager.NavigateTo("/miembros/suscripciones")'>
                                <div class="action-circle bg-info me-3">
                                    <i class="bi bi-credit-card text-white"></i>
                                </div>
                                <div>
                                    <h6 class="mb-1">Ver Suscripciones</h6>
                                    <small class="text-muted">Gestionar planes y pagos</small>
                                </div>
                                <i class="bi bi-chevron-right ms-auto text-muted"></i>
                            </button>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Reservas recientes -->
            <div class="col-lg-8 mb-4">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-header bg-white border-bottom">
                        <div class="d-flex justify-content-between align-items-center">
                            <h5 class="card-title mb-0">
                                <i class="bi bi-clock-history me-2 text-primary"></i>Reservas Recientes
                            </h5>
                            <button class="btn btn-outline-primary btn-sm" 
                                    @onclick='() => _navigationManager.NavigateTo("/miembros/reservas")'>
                                Ver todas
                            </button>
                        </div>
                    </div>
                    <div class="card-body">
                        @if (reservasRecientes.Any())
                        {
                            <div class="list-group list-group-flush">
                                @foreach (var reserva in reservasRecientes.Take(5))
                                {
                                    <div class="list-group-item border-0 px-0">
                                        <div class="d-flex justify-content-between align-items-start">
                                            <div class="d-flex">
                                                <div class="me-3">
                                                    <div class="@GetEstadoClass(reserva.EstadoReserva) reserva-circle">
                                                        <i class="bi bi-geo-alt text-white small"></i>
                                                    </div>
                                                </div>
                                                <div>
                                                    <h6 class="mb-1">Plaza @(reserva.Lugar?.Numero.ToString() ?? "N/A")</h6>
                                                    <p class="mb-1 text-muted small">
                                                        @reserva.FechaInicio.ToString("dd/MM/yyyy HH:mm") - 
                                                        @reserva.FechaFin.ToString("dd/MM/yyyy HH:mm")
                                                    </p>
                                                    <small class="text-muted">@(reserva.Vehiculo?.Patente ?? "N/A")</small>
                                                </div>
                                            </div>
                                            <span class="badge @GetEstadoBadgeClass(reserva.EstadoReserva)">
                                                @reserva.EstadoReserva
                                            </span>
                                        </div>
                                    </div>
                                }
                            </div>
                        }
                        else
                        {
                            <div class="text-center py-4">
                                <i class="bi bi-calendar-x display-4 text-muted"></i>
                                <h6 class="mt-3">No tienes reservas aún</h6>
                                <p class="text-muted">¡Haz tu primera reserva para comenzar!</p>
                                <button class="btn btn-primary" @onclick='() => _navigationManager.NavigateTo("/miembros/reservas/crear")'>
                                    <i class="bi bi-plus-circle me-2"></i>Nueva Reserva
                                </button>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
}

@code {
    private bool isAuthenticated = false;
    private bool isLoading = true;
    private bool isInitialized = false;
    private Usuario? usuario;
    private int totalVehiculos = 0;
    private int totalReservas = 0;
    private int reservasActivas = 0;
    private int suscripcionesActivas = 0;
    private List<Reserva> reservasRecientes = new();

    protected override async Task OnInitializedAsync()
    {
        // Verificar autenticación en la inicialización
        try
        {
            Console.WriteLine("Dashboard: Verificando autenticación...");
            isAuthenticated = await _firebaseAuthService.IsUserAuthenticated();
            Console.WriteLine($"Dashboard: Autenticado = {isAuthenticated}");
            
            if (isAuthenticated)
            {
                await CargarDatosUsuario();
                await CargarEstadisticas();
            }
            
            isLoading = false;
            isInitialized = true;
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error al verificar autenticación en Dashboard: {ex.Message}");
            isAuthenticated = false;
            isLoading = false;
            isInitialized = true;
        }
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender && !isInitialized)
        {
            try
            {
                Console.WriteLine("Dashboard OnAfterRenderAsync: Verificando autenticación...");
                isAuthenticated = await _firebaseAuthService.IsUserAuthenticated();
                Console.WriteLine($"Dashboard OnAfterRenderAsync: Autenticado = {isAuthenticated}");
                
                if (isAuthenticated)
                {
                    await CargarDatosUsuario();
                    await CargarEstadisticas();
                }
                
                isLoading = false;
                StateHasChanged();
            }
            catch (Exception ex)
            {
                Console.WriteLine($"Error en Dashboard OnAfterRenderAsync: {ex.Message}");
                isAuthenticated = false;
                isLoading = false;
                StateHasChanged();
            }
        }
    }

    private async Task CargarDatosUsuario()
    {
        try
        {
            Console.WriteLine("Dashboard: Cargando datos del usuario...");
            var firebaseUser = _firebaseAuthService.CurrentUser;
            Console.WriteLine($"Dashboard: FirebaseUser = {firebaseUser?.Email}");
            
            if (firebaseUser != null)
            {
                var usuarios = await _usuarioService.GetAllAsync();
                usuario = usuarios?.FirstOrDefault(u => u.Email == firebaseUser.Email);
                
                if (usuario == null)
                {
                    Console.WriteLine("Dashboard: Usuario no encontrado en BD, creando...");
                    usuario = new Usuario
                    {
                        Email = firebaseUser.Email,
                        Nombre = firebaseUser.DisplayName ?? "Usuario",
                        Password = "",
                        TipoUsuario = Service.Enums.TipoUsuarioEnum.Cliente
                    };
                    
                    usuario = await _usuarioService.AddAsync(usuario);
                    Console.WriteLine($"Dashboard: Usuario creado con ID {usuario.Id}");
                }
                else
                {
                    Console.WriteLine($"Dashboard: Usuario encontrado con ID {usuario.Id}");
                }
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error al cargar datos del usuario: {ex.Message}");
        }
    }

    private async Task CargarEstadisticas()
    {
        try
        {
            if (usuario != null)
            {
                Console.WriteLine($"Dashboard: Cargando estadísticas para usuario {usuario.Id}...");
                
                // Cargar vehículos
                var vehiculos = await _vehiculoService.GetByUsuarioAsync(usuario.Id);
                totalVehiculos = vehiculos?.Count ?? 0;
                Console.WriteLine($"Dashboard: Total vehículos = {totalVehiculos}");

                // Cargar reservas
                var reservas = await _reservaService.GetByUsuarioAsync(usuario.Id);
                totalReservas = reservas?.Count ?? 0;
                reservasActivas = reservas?.Count(r => r.EstadoReserva == Service.Enums.EstadoReservaEnum.Activa) ?? 0;
                reservasRecientes = reservas?.OrderByDescending(r => r.FechaInicio).ToList() ?? new List<Reserva>();
                Console.WriteLine($"Dashboard: Total reservas = {totalReservas}, Activas = {reservasActivas}");

                // TODO: Cargar suscripciones cuando esté implementado
                suscripcionesActivas = 0;
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error al cargar estadísticas: {ex.Message}");
        }
    }

    private string GetEstadoClass(Service.Enums.EstadoReservaEnum estado)
    {
        return estado switch
        {
            Service.Enums.EstadoReservaEnum.Activa => "bg-success",
            Service.Enums.EstadoReservaEnum.Cancelada => "bg-danger",
            Service.Enums.EstadoReservaEnum.Finalizada => "bg-secondary",
            _ => "bg-secondary"
        };
    }

    private string GetEstadoBadgeClass(Service.Enums.EstadoReservaEnum estado)
    {
        return estado switch
        {
            Service.Enums.EstadoReservaEnum.Activa => "bg-success",
            Service.Enums.EstadoReservaEnum.Cancelada => "bg-danger",
            Service.Enums.EstadoReservaEnum.Finalizada => "bg-secondary",
            _ => "bg-secondary"
        };
    }
}

