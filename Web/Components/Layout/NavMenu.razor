@inject FirebaseAuthService _firebaseAuthService
@inject NavigationManager _navigationManager
@inject IUsuarioService _usuarioService
@inject IMemoryCache _memoryCache
@rendermode InteractiveServer

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">
            <i class="bi bi-p-square-fill me-2"></i>ParkAR
        </a>
    </div>
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler" />

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="bi bi-house-door-fill me-2" aria-hidden="true"></span> Inicio
            </NavLink>
        </div>

        @if (_isLogued && _isInitialized)
        {
            @if (_isAdmin)
            {
                <!-- Sección de Admin -->
                <div class="nav-item px-3">
                    <div class="nav-section-title">
                        ADMINISTRACIÓN
                    </div>
                </div>

                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="admin/dashboard">
                        <span class="bi bi-speedometer2 me-2" aria-hidden="true"></span> Dashboard Admin
                    </NavLink>
                </div>

                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="admin/usuarios">
                        <span class="bi bi-people-fill me-2" aria-hidden="true"></span> Usuarios
                    </NavLink>
                </div>

                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="admin/lugares">
                        <span class="bi bi-grid-3x3-gap-fill me-2" aria-hidden="true"></span> Lugares
                    </NavLink>
                </div>

                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="admin/reservas">
                        <span class="bi bi-calendar-check-fill me-2" aria-hidden="true"></span> Reservas
                    </NavLink>
                </div>

                <!-- Separador -->
                <div class="nav-item px-3">
                    <hr class="text-muted my-3" />
                </div>
            }

            <!-- Sección de Miembros -->
            <div class="nav-item px-3">
                <div class="nav-section-title">
                    ÁREA DE MIEMBROS
                </div>
            </div>
            
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="miembros/perfil">
                    <span class="bi bi-person-circle me-2" aria-hidden="true"></span> Mi Perfil
                </NavLink>
            </div>

            <div class="nav-item px-3">
                <NavLink class="nav-link" href="miembros/reservas">
                    <span class="bi bi-calendar-check me-2" aria-hidden="true"></span> Mis Reservas
                </NavLink>
            </div>

            <div class="nav-item px-3">
                <NavLink class="nav-link" href="miembros/reservas/crear">
                    <span class="bi bi-plus-circle me-2" aria-hidden="true"></span> Nueva Reserva
                </NavLink>
            </div>

            <div class="nav-item px-3">
                <NavLink class="nav-link" href="miembros/suscripciones">
                    <span class="bi bi-credit-card me-2" aria-hidden="true"></span> Suscripciones
                </NavLink>
            </div>

            <!-- Separador -->
            <div class="nav-item px-3">
                <hr class="text-muted my-3" />
            </div>
        }

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="login">
                <span class="bi bi-box-arrow-in-right me-2" aria-hidden="true"></span> @textBtnLogin
            </NavLink>
        </div>
    </nav>
</div>

@code {
    private bool _isLogued = false;
    private bool _isInitialized = false;
    private bool _isAdmin = false;
    private string textBtnLogin = "Iniciar sesión";
    private Usuario? _usuario;

    protected override async Task OnInitializedAsync()
    {
        await CheckUserAuthentication();
        _isInitialized = true;
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await CheckUserAuthentication();
            StateHasChanged();
        }
    }

    private async Task CheckUserAuthentication()
    {
        try
        {
            _isLogued = await _firebaseAuthService.IsUserAuthenticated();

            if (_isLogued)
            {
                textBtnLogin = "Cerrar sesión";
                var firebaseUser = _firebaseAuthService.CurrentUser;

                if (firebaseUser != null)
                {
                    var usuarios = await _usuarioService.GetAllAsync();
                    _usuario = usuarios?.FirstOrDefault(u => u.Email == firebaseUser.Email);
                    
                    // Verificar si es Admin
                    _isAdmin = _usuario?.TipoUsuario == Service.Enums.TipoUsuarioEnum.Admin;
                }
            }
            else
            {
                textBtnLogin = "Iniciar sesión";
                _isAdmin = false;
            }
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error checking authentication: {ex.Message}");
            _isLogued = false;
            _isAdmin = false;
        }
    }
}

<style>
    .nav-section-title {
        text-transform: uppercase;
        letter-spacing: 0.5px;
        font-size: 0.75rem;
    }
</style>