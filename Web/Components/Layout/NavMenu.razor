@inject FirebaseAuthService _firebaseAuthService
@inject NavigationManager _navigationManager
@rendermode InteractiveServer

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">
            <i class="bi bi-p-square-fill me-2"></i>ParkAR
        </a>
    </div>
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler" />

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="bi bi-house-door-fill me-2" aria-hidden="true"></span> Inicio
            </NavLink>
        </div>

        @if (_isLogued && _isInitialized)
        {
            <!-- Sección de Miembros -->
            <div class="nav-item px-3">
                <div class="nav-section-title text-muted small fw-bold mt-3 mb-2">
                    ÁREA DE MIEMBROS
                </div>
            </div>
            
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="miembros/perfil">
                    <span class="bi bi-person-circle me-2" aria-hidden="true"></span> Mi Perfil
                </NavLink>
            </div>

            <div class="nav-item px-3">
                <NavLink class="nav-link" href="miembros/reservas">
                    <span class="bi bi-calendar-check me-2" aria-hidden="true"></span> Mis Reservas
                </NavLink>
            </div>

            <div class="nav-item px-3">
                <NavLink class="nav-link" href="miembros/reservas/crear">
                    <span class="bi bi-plus-circle me-2" aria-hidden="true"></span> Nueva Reserva
                </NavLink>
            </div>

            <div class="nav-item px-3">
                <NavLink class="nav-link" href="miembros/suscripciones">
                    <span class="bi bi-credit-card me-2" aria-hidden="true"></span> Suscripciones
                </NavLink>
            </div>

            <!-- Separador -->
            <div class="nav-item px-3">
                <hr class="text-muted my-3" />
            </div>
        }

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="login">
                <span class="bi bi-box-arrow-in-right me-2" aria-hidden="true"></span> @textBtnLogin
            </NavLink>
        </div>
    </nav>
</div>

@code {
    private FirebaseUser? _userLogued;
    private bool _isLogued = false;
    private bool _isInitialized = false;
    private string textBtnLogin => _isLogued ? "Cerrar sesión" : "Iniciar sesión";

    protected override async Task OnInitializedAsync()
    {
        try
        {
            Console.WriteLine("NavMenu: Verificando autenticación...");
            _isLogued = await _firebaseAuthService.IsUserAuthenticated();
            Console.WriteLine($"NavMenu: Autenticado = {_isLogued}");
            
            if (_isLogued)
            {
                _userLogued = _firebaseAuthService.CurrentUser;
                Console.WriteLine($"NavMenu: Usuario = {_userLogued?.Email}");
            }
            _isInitialized = true;
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error al verificar autenticación en NavMenu: {ex.Message}");
            _isLogued = false;
            _userLogued = null;
            _isInitialized = true;
        }
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            // Suscribirse a cambios de login solo después del primer renderizado
            _firebaseAuthService.OnChangeLogin += LoginChanged;
            
            // Si no se inicializó correctamente en OnInitializedAsync, intentar de nuevo
            if (!_isInitialized)
            {
                try
                {
                    Console.WriteLine("NavMenu OnAfterRenderAsync: Verificando autenticación...");
                    _isLogued = await _firebaseAuthService.IsUserAuthenticated();
                    Console.WriteLine($"NavMenu OnAfterRenderAsync: Autenticado = {_isLogued}");
                    
                    if (_isLogued)
                    {
                        _userLogued = _firebaseAuthService.CurrentUser;
                    }
                    else
                    {
                        _userLogued = null;
                    }
                    _isInitialized = true;
                    StateHasChanged();
                }
                catch (Exception ex)
                {
                    Console.WriteLine($"Error al verificar autenticación en OnAfterRenderAsync: {ex.Message}");
                    _isLogued = false;
                    _userLogued = null;
                    _isInitialized = true;
                    StateHasChanged();
                }
            }
        }
    }

    private async void LoginChanged()
    {
        try
        {
            Console.WriteLine("NavMenu: LoginChanged event triggered");
            var isAuthenticated = await _firebaseAuthService.IsUserAuthenticated();
            Console.WriteLine($"NavMenu LoginChanged: Autenticado = {isAuthenticated}");
            
            if (isAuthenticated && _firebaseAuthService.CurrentUser != null)
            {
                _userLogued = _firebaseAuthService.CurrentUser;
                _isLogued = true;
                Console.WriteLine($"NavMenu LoginChanged: Usuario logueado = {_userLogued.Email}");
            }
            else
            {
                _isLogued = false;
                _userLogued = null;
                Console.WriteLine("NavMenu LoginChanged: Usuario deslogueado");
                
                // Solo redirigir al login si estamos en una página de miembros
                var currentUrl = _navigationManager.Uri;
                if (currentUrl.Contains("/miembros"))
                {
                    _navigationManager.NavigateTo("/login");
                }
            }
            
            StateHasChanged();
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error en LoginChanged: {ex.Message}");
            _isLogued = false;
            _userLogued = null;
            StateHasChanged();
        }
    }

    public void Dispose()
    {
        // Desuscribirse del evento para evitar memory leaks
        if (_firebaseAuthService != null)
        {
            _firebaseAuthService.OnChangeLogin -= LoginChanged;
        }
    }
}

@implements IDisposable

<style>
    .nav-section-title {
        text-transform: uppercase;
        letter-spacing: 0.5px;
        font-size: 0.75rem;
    }
</style>