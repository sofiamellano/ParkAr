@* Componente reutilizable para acciones rápidas *@

<button class="list-group-item list-group-item-action d-flex align-items-center py-3" 
        @onclick="HandleClick">
    <div class="@GetBackgroundClass() rounded-circle p-2 me-3">
        <i class="@Icon text-white"></i>
    </div>
    <div class="flex-grow-1">
        <h6 class="mb-1">@Title</h6>
        <small class="text-muted">@Description</small>
    </div>
    <i class="bi bi-chevron-right text-muted"></i>
</button>

@code {
    [Parameter]
    public string Icon { get; set; } = "bi bi-plus";

    [Parameter]
    public string Title { get; set; } = "Acción";

    [Parameter]
    public string Description { get; set; } = "Descripción de la acción";

    [Parameter]
    public QuickActionColor Color { get; set; } = QuickActionColor.Primary;

    [Parameter]
    public EventCallback OnClick { get; set; }

    private async Task HandleClick()
    {
        await OnClick.InvokeAsync();
    }

    private string GetBackgroundClass()
    {
        return Color switch
        {
            QuickActionColor.Primary => "bg-primary",
            QuickActionColor.Success => "bg-success",
            QuickActionColor.Info => "bg-info",
            QuickActionColor.Warning => "bg-warning",
            QuickActionColor.Danger => "bg-danger",
            QuickActionColor.Secondary => "bg-secondary",
            _ => "bg-primary"
        };
    }

    public enum QuickActionColor
    {
        Primary,
        Success,
        Info,
        Warning,
        Danger,
        Secondary
    }
}