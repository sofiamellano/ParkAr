@code {
    [Parameter] public string Titulo { get; set; } = "";
    [Parameter] public string Descripcion { get; set; } = "";
    [Parameter] public string Badge { get; set; } = "";
}

<div class="row mb-4">
    <div class="col-12">
        <div class="d-flex justify-content-between align-items-center">
            <div>
                <h2 class="mb-1">
                    <i class="bi bi-people-fill me-2 text-primary"></i>@Titulo
                </h2>
                <p class="text-muted mb-0">@Descripcion</p>
            </div>
            @if (!string.IsNullOrEmpty(Badge))
            {
                <div>
                    <span class="badge bg-primary fs-5">@Badge</span>
                </div>
            }
        </div>
    </div>
</div>