@code {
    [Parameter] public List<Usuario> Usuarios { get; set; } = new();
    [Parameter] public Dictionary<int, int> VehiculosPorUsuario { get; set; } = new();
    [Parameter] public Dictionary<int, int> ReservasPorUsuario { get; set; } = new();
    [Parameter] public EventCallback<Usuario> OnVerDetalle { get; set; }
    [Parameter] public EventCallback<Usuario> OnBloquear { get; set; }
    [Parameter] public EventCallback<Usuario> OnHabilitar { get; set; }

    private string GetTipoBadgeClass(Service.Enums.TipoUsuarioEnum tipo) =>
        tipo == Service.Enums.TipoUsuarioEnum.Admin ? "bg-danger" : "bg-primary";
}

<div class="row">
    <div class="col-12">
        <div class="card border-0 shadow-sm">
            <div class="card-body p-0">
                @if (Usuarios.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-hover align-middle mb-0">
                            <thead class="bg-light">
                                <tr>
                                    <th class="px-4 py-3">Usuario</th>
                                    <th class="py-3">Tipo</th>
                                    <th class="py-3 text-center">Vehículos</th>
                                    <th class="py-3 text-center">Reservas</th>
                                    <th class="py-3 text-center">Estado</th>
                                    <th class="py-3 text-center">Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var usuario in Usuarios)
                                {
                                    <tr>
                                        <td class="px-4 py-3">
                                            <div class="d-flex align-items-center">
                                                <div class="avatar-circle bg-primary me-3">
                                                    <i class="bi bi-person-fill text-white"></i>
                                                </div>
                                                <div>
                                                    <h6 class="mb-0 fw-semibold">@usuario.Nombre</h6>
                                                    <small class="text-muted">@usuario.Email</small>
                                                </div>
                                            </div>
                                        </td>
                                        <td class="py-3">
                                            <span class="badge @GetTipoBadgeClass(usuario.TipoUsuario)">
                                                @usuario.TipoUsuario
                                            </span>
                                        </td>
                                        <td class="py-3 text-center">
                                            <span class="badge bg-info-subtle text-info">
                                                @VehiculosPorUsuario.GetValueOrDefault(usuario.Id, 0)
                                            </span>
                                        </td>
                                        <td class="py-3 text-center">
                                            <span class="badge bg-success-subtle text-success">
                                                @ReservasPorUsuario.GetValueOrDefault(usuario.Id, 0)
                                            </span>
                                        </td>
                                        <td class="py-3 text-center">
                                            @if (!usuario.IsDeleted)
                                            {
                                                <span class="badge bg-success">
                                                    <i class="bi bi-check-circle me-1"></i>Activo
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-danger">
                                                    <i class="bi bi-x-circle me-1"></i>Bloqueado
                                                </span>
                                            }
                                        </td>
                                        <td class="py-3 text-center">
                                            <div class="btn-group btn-group-sm" role="group">
                                                <button class="btn btn-outline-primary" @onclick="() => OnVerDetalle.InvokeAsync(usuario)">
                                                    <i class="bi bi-eye"></i>
                                                </button>
                                                @if (!usuario.IsDeleted)
                                                {
                                                    <button class="btn btn-outline-danger" @onclick="() => OnBloquear.InvokeAsync(usuario)">
                                                        <i class="bi bi-lock"></i>
                                                    </button>
                                                }
                                                else
                                                {
                                                    <button class="btn btn-outline-success" @onclick="() => OnHabilitar.InvokeAsync(usuario)">
                                                        <i class="bi bi-unlock"></i>
                                                    </button>
                                                }
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="text-center py-5">
                        <i class="bi bi-inbox display-4 text-muted"></i>
                        <h5 class="mt-3 text-muted">No se encontraron usuarios</h5>
                        <p class="text-muted">Intenta modificar los filtros de búsqueda</p>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<style>
    .avatar-circle {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .bg-success-subtle {
        background-color: rgba(25, 135, 84, 0.1) !important;
    }

    .bg-info-subtle {
        background-color: rgba(13, 202, 240, 0.1) !important;
    }
</style>