@code {
    [Parameter] public List<Lugar> Lugares { get; set; } = new();
    [Parameter] public Dictionary<int, int> ReservasActivas { get; set; } = new();
    [Parameter] public EventCallback<Lugar> OnVerDetalle { get; set; }
    [Parameter] public EventCallback<Lugar> OnEditar { get; set; }
    [Parameter] public EventCallback<Lugar> OnEliminar { get; set; }
    [Parameter] public EventCallback<Lugar> OnRestaurar { get; set; }

    private bool TieneReservaActiva(int lugarId) => ReservasActivas.ContainsKey(lugarId);
}

<div class="row">
    <div class="col-12">
        <div class="card border-0 shadow-sm">
            <div class="card-body p-0">
                @if (Lugares.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-hover align-middle mb-0">
                            <thead class="bg-light">
                                <tr>
                                    <th class="px-4 py-3">Plaza</th>
                                    <th class="py-3 text-center">Estado</th>
                                    <th class="py-3 text-center">Reserva Activa</th>
                                    <th class="py-3 text-center">Total Reservas</th>
                                    <th class="py-3 text-center">Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var lugar in Lugares)
                                {
                                    var tieneReserva = TieneReservaActiva(lugar.Id);
                                    var totalReservas = lugar.Reservas?.Count ?? 0;

                                    <tr>
                                        <td class="px-4 py-3">
                                            <div class="d-flex align-items-center">
                                                <div class="avatar-circle bg-success me-3">
                                                    <i class="bi bi-p-square-fill text-white"></i>
                                                </div>
                                                <div>
                                                    <h6 class="mb-0 fw-semibold">Plaza @lugar.Numero</h6>
                                                    <small class="text-muted">ID: @lugar.Id</small>
                                                </div>
                                            </div>
                                        </td>
                                        <td class="py-3 text-center">
                                            @if (lugar.IsDeleted)
                                            {
                                                <span class="badge bg-danger">
                                                    <i class="bi bi-x-circle me-1"></i>Eliminado
                                                </span>
                                            }
                                            else if (tieneReserva)
                                            {
                                                <span class="badge bg-warning">
                                                    <i class="bi bi-lock-fill me-1"></i>Ocupado
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-success">
                                                    <i class="bi bi-check-circle me-1"></i>Disponible
                                                </span>
                                            }
                                        </td>
                                        <td class="py-3 text-center">
                                            <span class="badge @(tieneReserva ? "bg-warning-subtle text-warning" : "bg-success-subtle text-success")">
                                                @(tieneReserva ? "Sí" : "No")
                                            </span>
                                        </td>
                                        <td class="py-3 text-center">
                                            <span class="badge bg-info-subtle text-info">
                                                @totalReservas
                                            </span>
                                        </td>
                                        <td class="py-3 text-center">
                                            <div class="btn-group btn-group-sm" role="group">
                                                <button class="btn btn-outline-primary" 
                                                        @onclick="() => OnVerDetalle.InvokeAsync(lugar)"
                                                        title="Ver detalles">
                                                    <i class="bi bi-eye"></i>
                                                </button>
                                                @if (!lugar.IsDeleted)
                                                {
                                                    <button class="btn btn-outline-warning" 
                                                            @onclick="() => OnEditar.InvokeAsync(lugar)"
                                                            title="Editar">
                                                        <i class="bi bi-pencil"></i>
                                                    </button>
                                                    <button class="btn btn-outline-danger" 
                                                            @onclick="() => OnEliminar.InvokeAsync(lugar)"
                                                            title="Eliminar">
                                                        <i class="bi bi-trash"></i>
                                                    </button>
                                                }
                                                else
                                                {
                                                    <button class="btn btn-outline-success" 
                                                            @onclick="() => OnRestaurar.InvokeAsync(lugar)"
                                                            title="Restaurar">
                                                        <i class="bi bi-arrow-counterclockwise"></i>
                                                    </button>
                                                }
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="text-center py-5">
                        <i class="bi bi-inbox display-4 text-muted"></i>
                        <h5 class="mt-3 text-muted">No se encontraron lugares</h5>
                        <p class="text-muted">Intenta modificar los filtros de búsqueda</p>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<style>
    .avatar-circle {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .bg-success-subtle {
        background-color: rgba(25, 135, 84, 0.1) !important;
    }

    .bg-info-subtle {
        background-color: rgba(13, 202, 240, 0.1) !important;
    }

    .bg-warning-subtle {
        background-color: rgba(255, 193, 7, 0.1) !important;
    }

    .text-warning {
        color: #ffc107 !important;
    }
</style>