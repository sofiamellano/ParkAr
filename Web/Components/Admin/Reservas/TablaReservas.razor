@code {
    [Parameter] public List<Reserva> Reservas { get; set; } = new();
    [Parameter] public EventCallback<Reserva> OnVerDetalle { get; set; }
    [Parameter] public EventCallback<Reserva> OnCancelar { get; set; }
    [Parameter] public EventCallback<Reserva> OnEliminar { get; set; }
    [Parameter] public EventCallback<Reserva> OnRestaurar { get; set; }

    private string GetEstadoBadgeClass(Service.Enums.EstadoReservaEnum estado) =>
        estado switch
        {
            Service.Enums.EstadoReservaEnum.Activa => "bg-success",
            Service.Enums.EstadoReservaEnum.Cancelada => "bg-danger",
            Service.Enums.EstadoReservaEnum.Finalizada => "bg-secondary",
            _ => "bg-primary"
        };

    private bool EsReservaActiva(Reserva reserva) =>
        reserva.EstadoReserva == Service.Enums.EstadoReservaEnum.Activa &&
        !reserva.IsDeleted &&
        reserva.FechaInicio <= DateTime.Now &&
        reserva.FechaFin >= DateTime.Now;

    private string FormatearDuracion(TimeSpan duracion)
    {
        int horas = (int)duracion.TotalHours;
        int minutos = duracion.Minutes;
        return $"{horas}:{minutos:D2}h";
    }
}

<div class="row">
    <div class="col-12">
        <div class="card border-0 shadow-sm">
            <div class="card-body p-0">
                @if (Reservas.Any())
                {
                    <div class="table-responsive">
                        <table class="table table-hover align-middle mb-0">
                            <thead class="bg-light">
                                <tr>
                                    <th class="px-4 py-3">Reserva</th>
                                    <th class="py-3">Usuario</th>
                                    <th class="py-3 text-center">Vehículo</th>
                                    <th class="py-3 text-center">Plaza</th>
                                    <th class="py-3 text-center">Fecha/Hora</th>
                                    <th class="py-3 text-center">Estado</th>
                                    <th class="py-3 text-center">Acciones</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var reserva in Reservas)
                                {
                                    var duracion = reserva.FechaFin - reserva.FechaInicio;
                                    var estaActiva = EsReservaActiva(reserva);

                                    <tr class="@(estaActiva ? "table-success" : "")">
                                        <td class="px-4 py-3">
                                            <div class="d-flex align-items-center">
                                                <div class="avatar-circle @GetEstadoBadgeClass(reserva.EstadoReserva) me-3">
                                                    <i class="bi bi-calendar-check text-white"></i>
                                                </div>
                                                <div>
                                                    <h6 class="mb-0 fw-semibold">Reserva @reserva.Id</h6>
                                                    <small class="text-muted">
                                                        Duración: @FormatearDuracion(duracion)
                                                    </small>
                                                </div>
                                            </div>
                                        </td>
                                        <td class="py-3">
                                            <div>
                                                <h6 class="mb-0 fw-semibold">@(reserva.Usuario?.Nombre ?? "N/A")</h6>
                                                <small class="text-muted">@(reserva.Usuario?.Email ?? "N/A")</small>
                                            </div>
                                        </td>
                                        <td class="py-3 text-center">
                                            <span class="badge bg-info-subtle text-info">
                                                @(reserva.Vehiculo?.Patente ?? "N/A")
                                            </span>
                                        </td>
                                        <td class="py-3 text-center">
                                            <span class="badge bg-success-subtle text-success">
                                                Plaza @(reserva.Lugar?.Numero.ToString() ?? "N/A")
                                            </span>
                                        </td>
                                        <td class="py-3 text-center">
                                            <div>
                                                <small class="d-block">
                                                    <i class="bi bi-calendar3 me-1"></i>
                                                    @reserva.FechaInicio.ToString("dd/MM/yyyy")
                                                </small>
                                                <small class="d-block text-muted">
                                                    <i class="bi bi-clock me-1"></i>
                                                    @reserva.FechaInicio.ToString("HH:mm") - @reserva.FechaFin.ToString("HH:mm")
                                                </small>
                                            </div>
                                        </td>
                                        <td class="py-3 text-center">
                                            @if (reserva.IsDeleted)
                                            {
                                                <span class="badge bg-danger">
                                                    <i class="bi bi-x-circle me-1"></i>Eliminada
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="badge @GetEstadoBadgeClass(reserva.EstadoReserva)">
                                                    @if (reserva.EstadoReserva == Service.Enums.EstadoReservaEnum.Activa)
                                                    {
                                                        <i class="bi bi-check-circle me-1"></i>
                                                    }
                                                    else if (reserva.EstadoReserva == Service.Enums.EstadoReservaEnum.Cancelada)
                                                    {
                                                        <i class="bi bi-x-circle me-1"></i>
                                                    }
                                                    else
                                                    {
                                                        <i class="bi bi-clock-history me-1"></i>
                                                    }
                                                    @reserva.EstadoReserva
                                                </span>
                                            }
                                        </td>
                                        <td class="py-3 text-center">
                                            <div class="btn-group btn-group-sm" role="group">
                                                <button class="btn btn-outline-primary" 
                                                        @onclick="() => OnVerDetalle.InvokeAsync(reserva)"
                                                        title="Ver detalles">
                                                    <i class="bi bi-eye"></i>
                                                </button>
                                                @if (!reserva.IsDeleted)
                                                {
                                                    @if (reserva.EstadoReserva == Service.Enums.EstadoReservaEnum.Activa)
                                                    {
                                                        <button class="btn btn-outline-warning" 
                                                                @onclick="() => OnCancelar.InvokeAsync(reserva)"
                                                                title="Cancelar reserva">
                                                            <i class="bi bi-x-circle"></i>
                                                        </button>
                                                    }
                                                    <button class="btn btn-outline-danger" 
                                                            @onclick="() => OnEliminar.InvokeAsync(reserva)"
                                                            title="Eliminar reserva">
                                                        <i class="bi bi-trash"></i>
                                                    </button>
                                                }
                                                else
                                                {
                                                    <button class="btn btn-outline-success" 
                                                            @onclick="() => OnRestaurar.InvokeAsync(reserva)"
                                                            title="Restaurar">
                                                        <i class="bi bi-arrow-counterclockwise"></i>
                                                    </button>
                                                }
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
                else
                {
                    <div class="text-center py-5">
                        <i class="bi bi-inbox display-4 text-muted"></i>
                        <h5 class="mt-3 text-muted">No se encontraron reservas</h5>
                        <p class="text-muted">Intenta modificar los filtros de búsqueda</p>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

<style>
    .avatar-circle {
        width: 40px;
        height: 40px;
        border-radius: 50%;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .bg-success-subtle {
        background-color: rgba(25, 135, 84, 0.1) !important;
    }

    .bg-info-subtle {
        background-color: rgba(13, 202, 240, 0.1) !important;
    }

    .table-success {
        background-color: rgba(25, 135, 84, 0.05) !important;
    }
</style>