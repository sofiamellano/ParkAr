<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="AppMovil.Pages.TicketPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:viewmodels="clr-namespace:AppMovil.ViewModels"
    Title="{Binding Title}"
    x:DataType="viewmodels:TicketPageViewModel">

    <ScrollView>
        <StackLayout Padding="20" Spacing="25">

            <Frame BackgroundColor="Blue" BorderColor="Transparent" CornerRadius="15" Padding="20">
                <StackLayout Spacing="10">
                    <Label 
                        Text="Ticket Digital" 
                        FontSize="24" 
                        FontAttributes="Bold" 
                        TextColor="White"
                        HorizontalOptions="Center" />
                    
                    <Label 
                        Text="{Binding NumeroTicket}" 
                        FontSize="18" 
                        FontAttributes="Bold" 
                        TextColor="White"
                        HorizontalOptions="Center" />
                </StackLayout>
            </Frame>

            <Frame BackgroundColor="White" BorderColor="LightGray" CornerRadius="10" HasShadow="True" Padding="20">
                <StackLayout Spacing="15">
                    <Label Text="Informacion de la Reserva" FontSize="18" FontAttributes="Bold" />
                    
                    <StackLayout Spacing="8">
                        <StackLayout Orientation="Horizontal">
                            <Label Text="Lugar:" FontSize="14" FontAttributes="Bold" />
                            <Label Text="{Binding LugarReserva}" FontSize="14" HorizontalOptions="FillAndExpand" />
                        </StackLayout>

                        <StackLayout Orientation="Horizontal">
                            <Label Text="Fecha:" FontSize="14" FontAttributes="Bold" />
                            <Label Text="{Binding FechaReserva, StringFormat='{0:dd/MM/yyyy}'}" FontSize="14" HorizontalOptions="FillAndExpand" />
                        </StackLayout>

                        <StackLayout Orientation="Horizontal">
                            <Label Text="Hora:" FontSize="14" FontAttributes="Bold" />
                            <Label Text="{Binding HoraReserva}" FontSize="14" HorizontalOptions="FillAndExpand" />
                        </StackLayout>
                    </StackLayout>
                </StackLayout>
            </Frame>

            <Frame BackgroundColor="White" BorderColor="LightGray" CornerRadius="10" HasShadow="True" Padding="20">
                <StackLayout Spacing="15">
                    <Label Text="Codigo QR" FontSize="18" FontAttributes="Bold" HorizontalOptions="Center" />
                    
                    <Frame BackgroundColor="LightGray" 
                           BorderColor="Gray" 
                           CornerRadius="10" 
                           HeightRequest="200" 
                           WidthRequest="200" 
                           HorizontalOptions="Center">
                        <StackLayout VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand">
                            <Label Text="QR" FontSize="48" HorizontalOptions="Center" />
                            <Label Text="QR Code" FontSize="16" FontAttributes="Bold" HorizontalOptions="Center" />
                            <Label Text="{Binding QrCodeData}" FontSize="10" HorizontalOptions="Center" HorizontalTextAlignment="Center" />
                        </StackLayout>
                    </Frame>

                    <Label 
                        Text="Muestra este codigo al ingresar al estacionamiento" 
                        FontSize="12" 
                        TextColor="Gray" 
                        HorizontalOptions="Center" 
                        HorizontalTextAlignment="Center" />
                </StackLayout>
            </Frame>

            <StackLayout Spacing="10" Margin="0,20,0,0">
                <Button 
                    Text="Compartir Ticket"
                    Command="{Binding ShareTicketCommand}"
                    BackgroundColor="Green"
                    TextColor="White"
                    CornerRadius="8"
                    HeightRequest="50" />

                <Button 
                    Text="Guardar en Galeria"
                    Command="{Binding SaveTicketCommand}"
                    BackgroundColor="Orange"
                    TextColor="White"
                    CornerRadius="8"
                    HeightRequest="50" />

                <Button 
                    Text="Volver"
                    Command="{Binding GoBackCommand}"
                    BackgroundColor="Transparent"
                    TextColor="Blue"
                    BorderColor="Blue"
                    BorderWidth="1"
                    CornerRadius="8"
                    HeightRequest="50" />
            </StackLayout>

        </StackLayout>
    </ScrollView>

</ContentPage>