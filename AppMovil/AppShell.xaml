<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="AppMovil.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pages="clr-namespace:AppMovil.Pages"
    xmlns:viewmodels="clr-namespace:AppMovil.ViewModels"
    Shell.FlyoutBehavior="Disabled"
    Title="{Binding Title}"
    x:DataType="viewmodels:AppShellViewModel">

    <!-- Header opcional para mostrar info del usuario -->
    <Shell.FlyoutHeader>
        <StackLayout IsVisible="{Binding ShowUserInfo}" 
                     BackgroundColor="#4A90E2" 
                     Padding="20,40,20,20" 
                     Spacing="10">
            <Label Text="{Binding WelcomeMessage}" 
                   FontSize="18" 
                   FontAttributes="Bold" 
                   TextColor="White" />
            <Label Text="{Binding CurrentUser.Email}" 
                   FontSize="14" 
                   TextColor="White" />
            <Button Text="Cerrar Sesión" 
                    Command="{Binding LogoutCommand}"
                    BackgroundColor="Transparent"
                    TextColor="White"
                    BorderColor="White"
                    BorderWidth="1"
                    CornerRadius="5"
                    FontSize="12"
                    HeightRequest="35" />
        </StackLayout>
    </Shell.FlyoutHeader>

    <TabBar IsVisible="{Binding IsLoggedIn}">
        <ShellContent
            Title="Reservas"
            Icon="calendar_today.png"
            ContentTemplate="{DataTemplate pages:ReservasPage}"
            Route="ReservasPage" />

        <ShellContent
            Title="Suscripciones"
            Icon="card_membership.png"
            ContentTemplate="{DataTemplate pages:SuscripcionesPage}"
            Route="SuscripcionesPage" />

        <ShellContent
            Title="Historial"
            Icon="history.png"
            ContentTemplate="{DataTemplate pages:HistorialPage}"
            Route="HistorialPage" />

        <ShellContent
            Title="Perfil"
            Icon="person.png"
            ContentTemplate="{DataTemplate pages:PerfilPage}"
            Route="PerfilPage" />
    </TabBar>

    <!-- Páginas adicionales que no aparecen en las pestañas -->
    <ShellContent
        ContentTemplate="{DataTemplate pages:LoginPage}"
        Route="LoginPage" />
    
    <ShellContent
        ContentTemplate="{DataTemplate pages:RegisterPage}"
        Route="RegisterPage" />
    
    <ShellContent
        ContentTemplate="{DataTemplate pages:RecuperarPasswordPage}"
        Route="RecuperarPasswordPage" />
    
    <ShellContent
        ContentTemplate="{DataTemplate pages:CreateReservaPage}"
        Route="CreateReservaPage" />
    
    <ShellContent
        ContentTemplate="{DataTemplate pages:PagoPage}"
        Route="PagoPage" />
    
    <ShellContent
        ContentTemplate="{DataTemplate pages:TicketPage}"
        Route="TicketPage" />

</Shell>
